# Themeing
font-family = Monocraft
font-style = Regular
font-style-bold = "Bold"
font-style-italic = "Italic"
font-style-bold-italic = "Bold-Italic"
font-size = 10.5
#font-thicken
theme = gruvbox_material_dark_soft
background-opacity = 0.7
background-blur = 60

# displays: {"1": "0%", "3": "-13%"}
adjust-cell-width = -13%
adjust-cell-height = 25%
adjust-underline-position = 20

window-theme = dark
window-padding-x = 10
window-padding-y = 5,10
window-title-font-family = Monocraft

macos-titlebar-style = hidden
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true

# Create window splits
keybind = cmd+shift+;=new_split:right
keybind = cmd+shift+'=new_split:down
keybind = cmd+shift+|=equalize_splits

# Navigate window splits
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+j=goto_split:bottom
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+l=goto_split:right

# Navigate tabs
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab
