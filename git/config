# Internal Behaviour

[core]
    pager = diffnav
    compression = 9
    whitespace = error
    preloadindex = true

# Information Commands

[advice]
    statusHints = false

[status]
    branch = true
    showStash = true

[interactive]
    diffFilter = delta --color-only

[diff]
    # Extra padding of 3 lines in each hunk top/bottom
    context = 3
    renames = copies
    # Join neighbouring hunks within 10 lines
    interHunkContext = 10

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true
    line-numbers = true

[init]
    defaultBranch = main

[log]
    abbrevCommit = true
    showSignature = true
    graphColors = blue,yellow,cyan,magenta,green,red

[color "decorate"]
    HEAD = red
    branch = blue
    tag = yellow
    remoteBranch = green

[color "branch"]
    current = blue
    local = default
    remote = yellow
    upstream = green
    plain = magenta

[branch]
    sort = -committerdate

[tag]
    sort = -taggerdate

# Operational Commands

[merge]
    conflictstyle = zdiff3

[push]
    # Only push curent if not specified
    default = current

[pull]
    # Only push curent if not specified
    default = current

[rebase]
    autostash = true
    missingCommitsChecks = warn

